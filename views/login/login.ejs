<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <title>Iniciar Sesión</title>
</head>

<body>



    <div class="row mt-5">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <h3 class="text-center">Iniciar Sesion</h3>
            <div class="card text-center">
                <center><img class="mt-4" width="200px" alt="sombrero_calentano"
                        src="https://static.wixstatic.com/media/4964b2_95741359b6804e0ba5f04a4ca8857b5e~mv2.jpg/v1/fill/w_980,h_653,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/4964b2_95741359b6804e0ba5f04a4ca8857b5e~mv2.jpg">
                </center>

                <div class="card-body">
                    <form action="/login" method="post" id="login_form">
                        <div class="form-floating text-center">
                            <input style="text-align: center;"  id="correo" name="correo"
                                placeholder="correo@correo.com" class="form-control mt-3">
                            <label for="correo">Correo:</label>
                        </div>
                        <div class="form-floating ">
                            <input style="text-align: center;" type="password" id="password" name="password"
                                placeholder="******" class="form-control mt-3">
                            <label for="password">Contraseña:</label>
                        </div>

                        <br>
                        <button type="submit" class="btn btn-primary" id="btn-acceder"> Acceder</button>
                        <br>

                        <div class="alert_error mt-2">
                            <span id="alert_error"></span>

                        </div>


                        <div class="mt-4">
                            <span>No tienes cuenta?</span>
                            <a href="/registrarUsuario">Registrate</a>

                        </div>
                    </form>
                </div>

                <br>
            </div>

        </div>
    </div>


    <!-- estilos -->
    <style>
        
        .alert_error_true{
            background-color: red;
            color: white;
            border-radius: 5px;
            padding: 5px;
            
           
        }
        
    </style>

    <!-- scripts -->
    <script>
        const login_form = document.getElementById('login_form');

        login_form.addEventListener('submit', (event) => {

            console.log("Login");


            const correo = document.getElementById('correo').value;
            const password = document.getElementById('password').value;

            const expresionRegularCorreo = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            var alert_error = document.getElementById('alert_error');

            if (correo === "" || password === "" || expresionRegularCorreo.test(correo) != true) {


                alert_error.innerHTML = "Campos vacios o Correo Invalido";
                alert_error.classList.add('alert_error_true')
                event.preventDefault();

            }
            
        });

    </script>
    <!-- <script src="../assets/js/script.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

</body>

</html>